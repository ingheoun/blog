<form action = "/blog/update/<%= @post.id %>" method = "post">
    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
    
  	<div class = "form-group">
    <label> 분 류 </label>
	  <select name="category" class="form-control">
  	  <option value = "0"> all </option>
    	<% @ctgrs.each do |cat| %>
    	  <% if @post.category_id == cat.id %>
      	  <option value = <%= cat.id %> selected> <%= cat.name %> </option>
      	<% else %>
      	  <option value = <%= cat.id %> > <%= cat.name %> </option>
    	  <% end %>
    	<% end %>
	  </select>
	  </div>
    
    <div class = "form-group">
        <label> 제 목 </label>
        <input type = "text" name = "title" class="form-control" placeholder = "제목을 입력해 주세요" value = "<%= @post.title%>">
    </div>
    
    <div class = "form-group">
        <label> 내 용</label>
        <textarea name = "content" class="form-control" rows = '15' placeholder = "내용을 입력해 주세요"><%= @post.content %></textarea>
    </div>
    
    <div class = "form-actions">
        <button type="submit" class="btn btn-default">Submit</button>
    </div>
    
</form>